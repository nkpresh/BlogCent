<section id="body-content">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                @{ foreach (var Post in Model)
                    {
                        var photoPath = "/images/" + (Post.PhotoPaths ?? "error/Colorlib.jpg");
                        <div class="blog-post card">
                            <div class="item-thumbs">
                                <img src="@photoPath" style="height:450px" />
                            </div>
                            <div class="blog-outer" style="display:inline-block">
                                <h3 class="blog-title"><a asp-controller="Home" asp-action="Details" asp-route-Id="@Post.Id">@Post.Headline</a></h3>
                                <div class="meta">
                                    <span><a href="#"><i class="fa fa-tag"></i> @Post.Category</a></span>
                                    <span class="date">@Post.PostTime</span>

                                    @*likes start*@
                                    <span>
                                        <label><i>@Post.NumberOfLikes</i> </label>
                                        <a asp-controller="Home" asp-action="BlogLikes" asp-route-Id="@Post.Id" data-toggle="tooltip" title="" data-original-title="@Post.NumberOfLikes" class="like-icons">
                                            <i class="fa fa-thumbs-up fa-3x"></i>
                                        </a>
                                    </span>
                                    @*likes stop*@
                                    @*comments start*@
                                    <span>
                                        <label><i>@Post.NumberOfComments</i> </label>
                                        <a asp-controller="Home" asp-action="Details" asp-route-Id="@Post.Id"
                                           data-toggle="tooltip" title="" data-original-title="@Post.NumberOfComments" class="comments-icon">
                                            <i class="fa fa-comments fa-3x"></i>
                                        </a>
                                    </span>
                                    @*comments stop*@
                                </div>

                                <div class="admin-text">
                                    <p><img src="images/author-thumb.jpg" alt=""></p>
                                    <i>By <a href="#">@Post.Name</a></i>
                                </div>
                            </div>
                            <div class="blog-bottom">
                                <div class="social-icons pull-left">
                                    <ul>
                                        <li><a href="#" data-toggle="tooltip" title="" data-original-title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                        <li><a href="#" data-toggle="tooltip" title="" data-original-title="Facebook"><i class="fa fa-facebook"></i></a></li>
                                        <li><a href="#" data-toggle="tooltip" title="" data-original-title="Pinterest"><i class="fa fa-pinterest"></i></a></li>
                                        <li><a href="#" data-toggle="tooltip" title="" data-original-title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
                                    </ul>
                                </div>
                                <div class="pull-right"><a asp-controller="Home" asp-action="Details" asp-route-Id="@Post.Id" class="more-links">Read More</a></div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <br/>
                        <br/>
                    }
                };
                <!-- xxx Pagination Style xxx -->
                <div class="pagination-wrap text-right">
                    <ul class="pagination">
                        <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                    </ul>
                </div>
                <!-- xxx Pagination End xxx -->
            </div>
            <div class="col-sm-4">
                <!-- xxx Widet Box xxx -->
                <div class="widgets-box">
                    <div class="sidebar-head"><span>Newsletter Signup</span></div>
                    <div class="sidebar-text">
                        <p>Sign up to receive latest updates with Ruaha Blog!</p>
                        <div class="newsletter-input">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter Email Here">
                        </div>
                        <div class="newsletter-btn">
                            <button type="submit" class="btn-default">Send <i class="fa fa-check-circle"></i></button>
                        </div>
                    </div>
                </div>
                <!-- xxx Widet Box End xxx -->
            </div>
        </div>
    
</section>